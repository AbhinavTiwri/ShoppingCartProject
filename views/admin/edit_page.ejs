<%- include('../layouts/adminheader.ejs') %>

    <h2 class="page-title">Edit a Page</h2>
    <a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
    <br><br><br>
    <form method="post" action="/admin/pages/edit_page/<%= slug %>">
        <div class="form-group mb-3">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
        </div>

        <div class="form-group mb-3">
            <label for="slug">Slug</label>
            <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Title">
        </div>

        <div class="form-group mb-3">
            <label for="content">Content</label>
            <textarea name="content" class="form-control" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
        </div>

        <input type="hidden" name="id" value="<%= id %>">
        <button class="btn btn-secondary">Submit</button>

    </form>


    <%- include('../layouts/adminfooter.ejs') %>