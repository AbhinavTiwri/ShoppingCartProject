<%- include('../layouts/adminheader.ejs') %>

    <h2 class="page-title">Products</h2>
    <a href="/admin/products/add_product" class="btn btn-primary">Add a new product</a>
    <br><br><br>
    <% if (count > 0) { %> 

    <table class="table table-striped">
        <thead>
            <tr class="home">
                <th>Product</th>
                <th>Price</th>
                <th>Category</th>
                <th>Product Image</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            <% products.forEach(function(product) { %>
                <tr>
                    <td>
                        <%= product.title %>
                    </td>
                    <td>
                        <%= parseFloat(product.price).toFixed(2) %>
                    </td>
                    <td>
                        <%= product.category %>
                    </td>
                    <td>
                        <img src="public/product_images/<%= product.image %>" alt="img" width="80px" >
                        <%= product.image %>
                        <!-- <% if (product.image == "") { %>  -->
                            <!-- <img src="/images/noimage.png">
                            <% } else { %>
                                <img src="/product_images/<%= product._id %>/<%= product.image %>">
                            <% }%> -->
                    </td>
                    <td><a href="/admin/products/edit_product/<%= product._id %>">Edit</a></td>
                    <td><a href="/admin/products/delete-product/<%= product._id %>">Delete</a></td>

                </tr>
                <% }); %>
        </tbody>
    </table>
            
    <% } else { %>
        <h3 class="text-center">There are no products.</h3>
    <% } %>

    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js" crossorigin="anonymous"></script>


    <%- include('../layouts/adminfooter.ejs') %>