<%- include('../layouts/adminheader.ejs') %>

    <h2 class="page-title">Pages</h2>
    <a href="/admin/pages/add_page" class="btn btn-primary">Add a new page</a>
    <br><br><br>

    <table class="table table-striped">
        <thead>
            <tr class="home">
                <th>Title</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            <% pages.forEach(function(page) { %>
                <tr id="id_<%= page._id %>" class="<%= page.slug %>">
                    <td>
                        <%= page.title %>
                    </td>
                    <td><a href="/admin/pages/edit_page/<%= page.slug %>">Edit</a></td>

                    <% if (page.slug=="home" ) { %>
                        <td></td>
                        <% } else { %>
                            <td><a href="/admin/pages/delete-page/<%= page._id %>">Delete</a></td>
                            <% }%>

                </tr>
                <% }); %>
        </tbody>
    </table>

    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js" crossorigin="anonymous"></script>


    <%- include('../layouts/adminfooter.ejs') %>